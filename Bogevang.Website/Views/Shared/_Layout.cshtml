@inject ICofoundryHelper Cofoundry

@{
    Layout = null;

    string title = null;
    string description = null;

    var metaDataModel = Model as IPageWithMetaDataViewModel;
    if (metaDataModel != null)
    {
        description = metaDataModel.MetaDescription;
        title = metaDataModel.PageTitle;
    }

    title = StringHelper.FirstNonEmpty(title, ViewBag.Title, "Bøgevang");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>@title</title>

    <meta name="description" content="@description" />

    <link rel="stylesheet" href="~/css/Bootstrap/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />

</head>
<body>

    <div class="container">
        <div class="header">
            <div class="header-intro">
                <h2 class="header-title">Bøgevang</h2>
                <p class="header-title">Spejderhytte i Vassingerød</p>
            </div>
            <div class="header-nav"role="navigation">
                <ul class="nav">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="#">Active</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Link</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Link</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Disabled</a>
                    </li>
                </ul>
            </div>
        </div>

        <main>
            @RenderBody()
        </main>

        <footer>
            <span>Kontakt: <a href="mailto:bogevanghytten@gmail.com">bogevanghytten@gmail.com</a> | Ejet af <a href="https://www.1lillerod.dk/">1. Lillerød spejdergruppe</a> og <a href="https://palna.dk">Palnatoke spejdergruppe</a></span>
        </footer>

    </div>

    @RenderSection("FooterScripts", required: false)

    <script src="~/js/bootstrap/bootstrap.bundle.min.js" integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0" crossorigin="anonymous"></script>

</body>
</html>